<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.life.task.mapper.SysLogMapper">

    <resultMap type="com.life.task.pojo.SysLog" id="SysLogResult">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="module" column="module"/>
        <result property="flag" column="flag"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="where">
        <where>
            <if test="params.flag != null">
                and t.flag = #{flag}
            </if>
            <if test="params.username != null">
                and u.username like concat('%', #{username}, '%')
            </if>
            <if test="params.beginTime != null">
                and t.create_time >= #{begin_time}
            </if>
        </where>
    </sql>

    <insert id="insertBatch"
            parameterType="java.util.List">
        insert into `sys_log`
        (`id`,`user_id`,`module`,`flag`,`remark`,`create_time`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{sysLog.id},
            #{sysLog.userId},
            #{sysLog.module},
            #{sysLog.flag},
            #{sysLog.remark},
            #{sysLog.createTime}
            )
        </foreach>

    </insert>

    <insert id="save">
        insert into sys_log
        (user_id, module, flag, remark, create_time)
        values
        (#{userId}, #{module}, #{flag}, #{remark}, now())
    </insert>

    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from sys_log t
        left join sys_user u
        on u.id = t.user_id
        <include refid="where"/>
    </select>

    <select id="list" resultType="com.life.task.pojo.SysLog">
        select t.*, u.username
        from sys_log t
        left join sys_user u
        on u.id = t.user_id
        <include refid="where"/>
        ${orderBy}
        limit #{offset}, #{limit}
    </select>

</mapper>
