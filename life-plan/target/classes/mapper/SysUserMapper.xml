<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.life.task.mapper.SysUserMapper">

    <resultMap type="SysUser" id="SysUserResult">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="telephone" column="telephone"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="birthday" column="birthday"/>
        <result property="sex" column="sex"/>
        <result property="headPortrait" column="head_portrait"/>
        <result property="status" column="status"/>
        <result property="delete" column="is_delete"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="where">
        <where>
            <if test="params.id != null">
                and id = #{params.id}
            </if>
            <if test="params.username != null">
                and username = #{params.username}
            </if>
            <if test="params.telephone != null">
                and telephone = #{params.telephone}
            </if>
            <if test="params.email != null">
                and email = #{params.email}
            </if>
            <if test="params.birthday != null">
                and birthday = #{params.birthday}
            </if>
            <if test="params.sex != null">
                and sex = #{params.sex}
            </if>
            <if test="params.status != null">
                and `status` = #{params.status}
            </if>
            <if test="params.delete != null">
                and `is_delete` = #{params.delete}
            </if>
        </where>
    </sql>

    <insert id="insertBatch"
            parameterType="java.util.List">
        insert into `sys_user`
        (`id`,`username`,`telephone`,`password`,`email`,`birthday`,`sex`,`head_portrait`,`status`,`is_delete`,`create_time`,`update_time`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{sysUser.id},
            #{sysUser.username},
            #{sysUser.telephone},
            #{sysUser.password},
            #{sysUser.email},
            #{sysUser.birthday},
            #{sysUser.sex},
            #{sysUser.headPortrait},
            #{sysUser.status},
            #{sysUser.isDelete},
            #{sysUser.createTime},
            #{sysUser.updateTime}
            )
        </foreach>

    </insert>

    <insert id="save">
        insert into sys_user
        (`id`, `username`, `telephone`, `password`, `email`, `birthday`, `sex`, `head_portrait`, `status`, `is_delete`,
         `create_time`, `update_time`)
        values (#{sysUser.id},
                #{sysUser.username},
                #{sysUser.telephone},
                #{sysUser.password},
                #{sysUser.email},
                #{sysUser.birthday},
                #{sysUser.sex},
                #{sysUser.headPortrait},
                #{sysUser.status},
                #{sysUser.delete},
                #{sysUser.createTime},
                #{sysUser.updateTime})
    </insert>

    <update id="update">
        update sys_user t
        <set>
            <if test="username != null">
                `username` = #{username},
            </if>
            <if test="telephone != null">
                `telephone` = #{telephone}
            </if>
            <if test="email != null">
                `email` = #{email}
            </if>
            <if test="birthday != null">
                `birthday` = #{birthday}
            </if>
            <if test="sex != null">
                `sex` = #{sex}
            </if>
            <if test="headPortrait != null">
                `head_portrait` = #{headPortrait}
            </if>
            <if test="status != null">
                `status` = #{status}
            </if>
            <if test="delete != null">
                `is_delete` = #{delete}
            </if>
            <if test="create_time != null">
                `create_time` = #{createTime}
            </if>
            <if test="update_time != null">
                `update_time` = #{updateTime}
            </if>
        </set>
    </update>

    <select id="getUser" resultMap="SysUserResult">
        select *
        from sys_user t
        where t.username = #{username}
    </select>

    <select id="count" resultType="java.lang.Integer">
        select count(1) from sys_user t
        <include refid="where"/>
    </select>

    <select id="selectByParams" resultType="com.life.task.pojo.SysUser" resultMap="SysUserResult">
        select id, username, telephone, email, birthday, sex, status, is_delete, create_time, update_time
        from sys_user t
        <include refid="where"/>
        limit #{offset}, #{pageSize}
    </select>

    <delete id="deleteUserRole">

    </delete>

    <insert id="saveUserRoles">
        insert into sys_user_role
        (user_id, role_id)
        values
        <foreach collection="roleIds" item="roleId" separator=",">
            (#{userId}, #{roleId})
        </foreach>
    </insert>

</mapper>
